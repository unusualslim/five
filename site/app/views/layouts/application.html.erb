<!DOCTYPE html>
<html>
  <head>
    <title>Landing Page</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<!-- HEADER -->    
  <header>  
<!-- Begin Nabar-logo -->    
    <nav class="navbar navbar-default" id="navbar-logo">
<!--      <div class="container"> -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>                        
          </button>
          <a href="#" >
<!--            <h1>Perry Brothers Oil Co, Inc.</h1>-->
            <%= image_tag "Perry Brothers Oil.png",  alt: "Perry Brothers Oil Company, Inc.", class: 'image-responsive' %>
          </a>
        </div>
     <div class="container">  
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Home', controller: 'pages' %></li>
            <li><%= link_to 'Store', spree.root_path %></li>
            <li><%= link_to 'Login', spree.login_path %></li>
          </ul>
        </div>
     </div>
<!--      </div> -->
    </nav>  
<!--END Navbar-logo -->
<!--Begin Navbar-links -->
    <nav class="navbar navbar-default" id="navbar-links">
        <div class="container-fluid">
          <div class="navbar navbar-nav">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>                        
            </button>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav ">
              <li><%= link_to 'Fuel', controller: 'pages' %></li>
              <li><%= link_to 'Lubricants', controller: 'pages' %></li>
              <li><%= link_to 'DEF & Antifreeze', controller: 'pages' %></li>
              <li><%= link_to 'Tires', controller: 'pages' %></li>
              <li><%= link_to 'Hydraulic Hoses & Fittings', controller: 'pages' %></li>
              <li><%= link_to 'Batteries', controller: 'pages' %></li>
              <li class="dropdown">
                <%= link_to 'Our Brands',  controller: 'pages',class: 'dropdown' do %>
                  <span class="caret"></span>
                <% end %>
                <ul class="dropdown-menu">
                  <%= link_to 'Gas N Go', controller: 'pages' %>
                  <%= link_to 'Perry's Chicken', controller: 'pages' %>
                </ul>
              </li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Who We are?
                  <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="#">About</a></li>
                    <li><a href="#">Careers</a></li>
                    <li><a href="#">Contact Us</a></li> 
                  </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
<!-- End Navbar-links -->
  </header>  
<!-- End HEADER -->
    <%= yield %>
  </body>
</html>
