<!DOCTYPE html>
<html>
  <head>
    <title>Landing Page</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<!-- HEADER -->    
  <header>      
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">	
          <%= link_to image_tag "Perry Brothers Oil.png",  alt: "Perry Brothers Oil Company, Inc.", class: 'image-responsive' %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Store', spree.root_path %></li>
            <li><%= link_to 'Login', spree.login_path %></li>
          </ul>
        </div>
      </div>  
<!--Begin Navbar-links -->
        <div class="container-fluid">
          <div class="navbar navbar-nav">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navBarLinks">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>                        
            </button>
          </div>
          <div class="collapse navbar-collapse" id="navBarLinks">
            <ul class="nav navbar-nav ">
              <li class="active"><%= link_to 'Home', controller: 'pages' %></li>
              <li><%= link_to 'Fuel', controller: 'pages' %></li>
              <li><%= link_to 'Lubricants', controller: 'pages' %></li>
              <li><%= link_to 'DEF & Antifreeze', controller: 'pages' %></li>
              <li><%= link_to 'Tires', controller: 'pages' %></li>
              <li><%= link_to 'Hydraulic Hoses & Fittings', controller: 'pages' %></li>
              <li><%= link_to 'Batteries', controller: 'pages' %></li>
              <li><%= link_to 'Become A Client', controller: ''ages' %></li>
            </ul>
          </div>
        </div>
      </nav>
<!-- End Navbar-links -->
  </header>  
<!-- End HEADER -->

    <%= yield %>
    
<!--Render Footer Partial -->
    <%= render :partial => "footer" %>
  </body>
</html>
